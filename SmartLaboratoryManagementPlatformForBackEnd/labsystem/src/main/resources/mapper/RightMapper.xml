<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="top.fans39.labsystem.dao.RightDao">

    <resultMap id="menuTree" type="top.fans39.labsystem.pojo.Right">
        <id column="id" property="id"></id>
        <result column="title" property="title"></result>
        <result column="path" property="path"></result>
        <result column="icon" property="icon"></result>
        <collection property="children" select="getMenuChildren" ofType="top.fans39.labsystem.pojo.Right" column="id"></collection>
    </resultMap>

    <select id="getMenuChildren" resultMap="menuTree">
        select *
        from rights
        where parent_id = #{id}
    </select>
    <select id="getRightList" resultMap="menuTree">
        select *
        from rights
        where parent_id = 0
    </select>
</mapper>